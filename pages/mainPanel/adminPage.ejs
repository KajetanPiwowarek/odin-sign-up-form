<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta http-equiv="X-UA-Compatible" content="IE=edge" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>HotDesk: Main Page</title>
    <link
      rel="shortcut icon"
      href="/images/workplace.png"
      type="image/x-icon"
    />
    <link rel="stylesheet" href="/css/mainPanelCss/adminPage.css" />
    <script src="/js/mainPanelScripts/adminPage.js" defer></script>
  </head>
  <body>
    <main class="container">
      <section
        class="panel"
        onmouseenter="openPanel()"
        onmouseleave="closePanel()"
      >
        <div class="upperPanel">
          <span>
            <img src="/images/workplace.png" alt="desk" />
            <a class="links" href="/home"><p class="panelText">HotDesk</p></a>
          </span>
          <span>
            <img src="/images/calendar.png" alt="calendar" />
            <a class="links" href="/calendar"
              ><p class="panelText">Calendar</p></a
            >
          </span>
          <span>
            <img src="/images/booking.png" alt="booking" />
            <a class="links" href="/booking"
              ><p class="panelText">Booking</p></a
            >
          </span>
        </div>
        <div class="downPanel">
          <span>
            <img src="/images/admin.png" alt="admin" />
            <a class="links" href="/admin"><p class="panelText">Admin</p></a>
          </span>
          <span>
            <img src="/images/logout.png" alt="logout" />
            <a class="links" href="/logout"><p class="panelText">LogOut</p></a>
          </span>
          <span>
            <img src="/images/user.png" alt="user" />
            <a class="links" href="/user"><p class="panelText">User</p></a>
          </span>
        </div>
      </section>
      <section class="main">
        <div class="formContainer">
          <form class="form" method="post" action="">
            <h1 class="header">Create New Desk</h1>
            <div class="input">
              <label for="deskName">Desk Name:</label>
              <input
                type="text"
                name="deskName"
                id="deskName"
                placeholder=""
                required
              />
            </div>
            <div id="errorDeskName" class="error"></div>
            <div class="input">
              <label for="deskNumber">Desk Number:</label>
              <input
                type="text"
                name="deskNumber"
                id="deskNumber"
                placeholder=""
                required
              />
            </div>
            <div id="errorDeskNumber" class="error"></div>
            <div class="input">
              <label for="floor">Desk at Floor:</label>
              <input
                type="number"
                name="floor"
                id="floor"
                placeholder=""
                required
              />
            </div>
            <div id="errorFloor" class="error"></div>
            <div class="input">
            <label for="type">Desk Type:</label>
            <select id="type" name="type">
              <option value="default" selected>-- type --</option>
              <option value="sitting">Sitting</option>
              <option value="standing">Standing</option>
              <option value="lyingDown">Lying Down</option>
            </select>
          </div>
          <div id="errorType" class="error"></div>
          <div class="createButton">
            <button type="submit" id="btnCreateDesk" class="btnCreateDesk">
              Create Desk
            </button>
          </div>
          </form>
          <div class="info"><%= info %></div>
        </div>
      </section>
    </main>
  </body>
</html>
